{% extends "mmmfestBundle:Component:componentForm.html.twig" %}

{% block pageContentTitle %}Ajouter un projet{% endblock %}

{% set menuSelected = 'projectList' %}

{% block formContent %}
    {{ parent() }}
    <div class="row">
        <div class="col-sm-2 col-sm-offset-0 col-xs-8 col-xs-offset-2 formEditAvatar">
            <a href="#" id="profilePicture" class="thumbnail" data-toggle="tooltip" data-placement="bottom" title="Cliquez ici pour télécharger une image (2Mo max !)">
                <img src="{{ asset(image == null ? 'common/images/no_avatar.jpg' : 'uploads/pictures/'~image) | imagine_filter('profile') }}"/>
                <span id="profileEditPictureField">
                       {{ form_widget(form.componentPicture) }}
                </span>
            </a>
        </div>
        <div class="col-sm-6">
            <div class="row">
                <div class="col-sm-6">
                    {{ form_row(form.preferedLabel, { 'label': 'Nom'}) }}
                </div>
                <div class="col-sm-6">
                    {{ form_row(form.alternativeLabel) }}
                </div>
            </div>
            <div class="row">
                <div class="col-sm-12">
                    {{ form_row(form.comment, { 'label': 'Description en une phrase'}) }}
                </div>
            </div>
            <div class="row">
                <div class="col-sm-12">
                    {{ form_row(form.description) }}
                </div>
            </div>
            <div class="row">
                <div class="col-sm-6">
                    {{ form_row(form.homePage) }}
                </div>
                <div class="col-sm-6">
                    {{ form_row(form.aboutPage) }}
                </div>
            </div>
            <div class="row">
                <div class="col-sm-12">
                    {{ form_row(form.managedBy, { 'label': 'Responsable(s) du projet (personnes ou organisations)'}) }}
                </div>
            </div>
            <div class="row">
                <div class="col-sm-12">
                    {{ form_row(form.involves, { 'label': 'Contributeurs (personnes ou organisations) - (Remonter en dessous de responsables du projet)'}) }}
                </div>
            </div>
            <div class="row">
                <div class="col-sm-12">
                    {{ form_row(form.hasInterest, { 'label': 'Domaine(s) thématique(s)'}) }}
                </div>
            </div>
            <div class="row">
                <div class="col-sm-12">
                    {{ form_row(form.hasSubject) }}
                </div>
            </div>

            <div class="row">
                <div class="col-sm-12" data-toggle="tooltip" data-placement="bottom" title="Saisissez des termes en anglais (temporaire) - Petite précision, vous renseignez des termes issus de wikipedia !">
                    {{ form_row(form.offers, { 'label': 'Ce dont elle propose' }) }}
                </div>
            </div>
            <div class="row">
                <div class="col-sm-12" data-toggle="tooltip" data-placement="bottom" title="Saisissez des termes en anglais (temporaire) - Petite précision, vous renseignez des termes issus de wikipedia !">
                    {{ form_row(form.needs, { 'label': 'Ce dont elle a besoin' }) }}
                </div>
            </div>
            <div class="row">
                <div class="col-sm-12">
                    {{ form_row(form.documentedBy, { 'label': 'Documents descriptifs du projet (Code Social, présentations etc.)'}) }}
                </div>
            </div>
            <div class="row">
                <div class="col-sm-12">
                    {{ form_row(form.save, {attr:{class:'btn btn-primary-lgv pull-right'}}) }}
                </div>
            </div>
        </div>
        <div class="col col-sm-4">
            {% embed "alertBobby.html.twig" %}
                {% block title %}Les projets{% endblock %}
                {% block content %}
                    <p>Outre le projet qui sera au coeur de votre atelier au MMM, vous pouvez créer d’autres projets dans lesquels vous êtes impliqués
                    </p>

                    <p> Cela vous permettra de les faire connaitre, et pourquoi pas d’engager de superbes discussions à l’apéro avec d’illustres inconnus ;-)
                    </p>

                {% endblock %}
            {% endembed %}
        </div>
    </div>
{% endblock %}
