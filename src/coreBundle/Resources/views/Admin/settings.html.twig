{% extends "::admin.html.twig" %}

{% block pageContentTitle %}Param√®tres{% endblock %}

{% set menuSelected = 'settings' %}

{% block pageContent %}
    {{ form_start(form) }}
    {{ form_errors(form) }}
    <div class="form-group">
        <div class="row">
            <div class="col col-sm-8">
                <h2>Changer de mot de passe et/ou de login</h2>
            </div>
        </div>
        <div class="row">
            <div class="col col-sm-8">
                {{ form_label(form.username, "Login") }}
                {{ form_widget(form.username, { 'attr': {'class': 'form-control'} }) }}
            </div>
        </div>
    </div>

    <div class="form-group">
        <div class="row">
            <div class="col col-sm-8">
                {{ form_label(form.password) }}
                {{ form_widget(form.password, { 'attr': {'class': 'form-control'} }) }}
                {{ form_label(form.passwordNew) }}
                {{ form_widget(form.passwordNew, { 'attr': {'class': 'form-control'} }) }}
                {{ form_label(form.passwordNewConfirm) }}
                {{ form_widget(form.passwordNewConfirm, { 'attr': {'class': 'form-control'} }) }}
                <br>
                {{ form_widget(form.submit, {'attr':{'class':'btn btn-primary-lgv'}}) }}
            </div>
        </div>
    </div>
    {{ form_end(form) }}
{% endblock %}
