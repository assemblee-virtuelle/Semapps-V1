{% extends "GrandsVoisinsBundle:Component:componentForm.html.twig" %}

{% block pageContentTitle %}Ajouter un projet{% endblock %}

{% set menuSelected = 'projectList' %}

{% block formContent %}
    {{ parent() }}
    <div class="row">
        <div class="col-sm-6">
            {{ form_row(form.label, { 'label': 'Nom du projet'}) }}
        </div>
        <div class="col-sm-6">
            {{ form_row(form.projectStart) }}
        </div>
    </div>

    <div class="row">
        <div class="col-sm-6">
            {{ form_row(form.building) }}
        </div>
        <div class="col-sm-6">
            {{ form_row(form.room) }}
        </div>
    </div>

    <div class="row">
        <div class="col-sm-6">
            {{ form_row(form.homepage) }}
        </div>
        <div class="col-sm-6">
            {{ form_row(form.mbox, { 'label': 'E-mail de contact'}) }}
        </div>
    </div>

    <div class="row">
        <div class="col-xs-12">
            {{ form_row(form.shortDescription, { 'label': 'Description courte' }) }}
        </div>
    </div>
    <div class="row">
        <div class="col-sm-12">
            {{ form_row(form.description) }}
        </div>
    </div>
    <div class="row">
        <div class="col-sm-12">
            {{ form_row(form.head, { 'label': 'Responsable(s) du projet (personnes ou organisations)'}) }}
        </div>
    </div>
    <div class="row">
        <div class="col-sm-12">
            {{ form_row(form.maker, { 'label': 'Contributeurs'}) }}
        </div>
    </div>

    <div class="row">
        <div class="col-xs-12">
            {{ form_row(form.resourceProposed, { 'label': 'Ressources que le projet met Ã  disposition'}) }}
        </div>
    </div>

    <div class="row">
        <div class="col-xs-12">
            {{ form_row(form.resourceNeeded, { 'label': 'Ressources dont le projet a besoin'}) }}
        </div>
    </div>
{% endblock %}
