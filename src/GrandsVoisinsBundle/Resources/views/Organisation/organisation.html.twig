{% extends "::admin.html.twig" %}

{% block title %}GrandsVoisinsBundle:Organisation:home{% endblock %}

{% block pageContentTitle %}Mon organisation{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('form/formInteractions.js') }}"></script>
    <script type='text/javascript'>
        $(document).ready( function () {
            $(".form-group").on('click', '.add-widget', function (event) {
                $model = $(this).parent().parent().find('.sf-value-block').first().find('.ref').first();
                console.log('Clonage du champ :');
                console.log($model);
                cloneWidget($model)
            });
        })
    </script>
{% endblock %}

{% block pageContent %}
    {{ parent() }}
    <form action="{{ path('save_orga') }}" method="post" id="form">
        <input name="url" value="{{ organisation.subject }}" type="hidden">
        <input name="uri" value="{{ organisation.subject }}" type="hidden">
        <input name="graphURI" value="{{ graphURI }}" type="hidden">
        <input name="edit" value="{{ edit }}" type="hidden">
        {% for field in organisation.fields %}
            {% if is_granted('ROLE_EDITOR') %}
                <div class="form-group col col-lg-12">
                    <div class="col-lg-4">
                        <label for="{{ field.label }}" data-uri-property="{{ field.property }}">{{ field.label }}</label>
                    </div>
                    <div class="col-lg-6 sf-value-block">

                {% if( field.label|lower == 'type') %}
                    <input  class="form-control" type="url" name="%3C{{ organisation.subject }}%3E+%3C{{ field.property }}%3E+%3C{{ field.value }}%3E+." value="{{ field.value }}" >
                {% else %}
                    {% if( field.widgetType|lower|split(' ')[0] == 'uri') %}
                        <input  class="form-control ref" type="url" name="{{ field.htmlName }}" value="{{ field.value }}" >
                    {% else %}
                        <input  class="form-control ref" type="{{  field.widgetType|lower|split(' ')[0] }}" name={{ field.htmlName }} value="{{ field.value }}" >
                    {% endif %}

                {% endif %}
                    </div>
                    <div class="col-lg-2">
                        <button type="button" class="btn btn-primary add-widget" readonly="yes" size="1" title="Add another value for label">add line</button>
                    </div>
                </div >
            {% else %}
                <div class="form-group">
                    <label for="{{ field.label }}" data-uri-property="{{ field.property }}">{{ field.label }}</label>
                    {% if( field.label|lower == 'type') %}
                        <input  class="form-control" type="url" name="%3C{{ organisation.subject }}%3E+%3C{{ field.property }}%3E+%3C{{ field.value }}%3E+." value="{{ field.value }}" disabled="disabled" >
                    {% else %}
                        {% if( field.widgetType|lower|split(' ')[0] == 'uri') %}
                            <input  class="form-control" type="url" name="{{ field.htmlName }}" value="{{ field.value }}" disabled="disabled">
                        {% else %}
                            <input  class="form-control" type="{{  field.widgetType|lower|split(' ')[0] }}" name={{ field.htmlName }} value="{{ field.value }}" disabled="disabled" >
                        {% endif %}
                    {% endif %}
                </div>
            {% endif %}
        {% endfor %}

        <input class="btn btn-primary-lgv pull-right" type="submit" value="sauvegarder">
    </form>
{% endblock %}







