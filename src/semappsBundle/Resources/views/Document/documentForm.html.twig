{% extends "semappsBundle:Component:componentForm.html.twig" %}

{% block pageContentTitle %}Ajouter un document {{ (context_manager.getContext(app.user.sfLink).contextName)? "pour " + context_manager.getContext(app.user.sfLink).contextName : 'personnel'}}{% endblock %}

{%  set menuSelected = 'Document' %}

{% block formContent %}
    {{ parent() }}
    <div class="row">
        <div class="col-sm-8">
            <div class="row">
                <div class="col-sm-8">
                    {{ form_row(form.preferedLabel, { 'label': 'Nom'}) }}
                </div>
                <div class="col-sm-4">
                    {{ form_row(form.version) }}
                </div>
            </div>
            <div class="row">
                <div class="col-sm-12">
                    {{ form_row(form.comment, { 'label': 'Description en une phrase'}) }}
                </div>
            </div>
            <div class="row">
                <div class="col-sm-12">
                    {{ form_row(form.hasType, { 'label': 'Type de document'}) }}
                </div>
            </div>
            <div class="row">
                <div class="col-sm-12">
                    {{ form_row(form.documents) }}
                </div>
            </div>
            <div class="row">
                <div class="col-sm-12">
                    {{ form_row(form.homePage, { 'label': 'Lien vers le document'}) }}
                </div>
            </div>
            <div class="row">
                <div class="col-sm-12">
                    {{ form_row(form.description) }}
                </div>
            </div>
            <div class="row">
                <div class="col-sm-6">
                    {{ form_row(form.licence, { 'label': 'Licence'}) }}
                </div>
                <div class="col-sm-6">
                    {{ form_row(form.publicationDate, { 'label': 'Date de publication'}) }}
                </div>
            </div>
            <div class="row">
                <div class="col-sm-6">
                    {{ form_row(form.format, { 'label': 'Format'}) }}
                </div>
                <div class="col-sm-6">
                    {{ form_row(form.language, { 'label': 'Langage'}) }}
                </div>
            </div>
            <div class="row">
                <div class="col-xs-12">
                    {{ form_row(form.hasInterest, { 'label': "Domaines thématiques"}) }}
                </div>
            </div>
            <div class="row">
                <div class="col-sm-12">
                    {{ form_row(form.hasSubject) }}
                </div>
            </div>
            <div class="row">
                <div class="col-sm-6">
                    {{ form_row(form.internal_document_author, { 'label': 'Auteur'}) }}
                </div>
                <div class="col-sm-6">
                    {{ form_row(form.external_document_author, { 'label': 'Si vous ne l\'avez pas trouvé ... '}) }}
                </div>
            </div>
            <div class="row">
                <div class="col-sm-6">
                    {{ form_row(form.internal_document_contributor, { 'label': 'Contributeur'}) }}
                </div>
                <div class="col-sm-6">
                    {{ form_row(form.external_document_contributor, { 'label': 'Si vous ne l\'avez pas trouvé ... '}) }}
                </div>
            </div>

            <div class="row">
                <div class="col-sm-6">
                    {{ form_row(form.internal_document_publisher,{ 'label': 'Editeur'}) }}
                </div>
                <div class="col-sm-6">
                    {{ form_row(form.external_document_publisher, { 'label': 'Si vous ne l\'avez pas trouvé ... '}) }}
                </div>
            </div>
            <div class="row">
                <div class="col-sm-12">
                    {{ form_row(form.references) }}
                </div>
            </div>
        </div>
        <div class="col col-sm-4">
            {% embed "alertBobby.html.twig" %}
                {% block title %}Les documents{% endblock %}
                {% block content %}
                    <p>
                        Vous pouvez éditer un document :
                    </p>
                    <ul>
                        <li>En tant que Personne</li>
                        <li>Ou en tant qu'Organisation si vous avez des droits d'administration sur cette dernière.</li>
                    </ul>
                    <p>
                        Si vous n'avez pas de droits d'édition sur une organisation, demandez en un à l'un de ses responsables
                    </p>
                {% endblock %}
            {% endembed %}
        </div>
    </div>
{% endblock %}
