{% trans_default_domain 'FOSUserBundle' %}

{% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}
<div class="container container-auth">
    <div class="row">
        <div class="col col-sm-4 col-sm-offset-4">
            <form action="{{ path("fos_user_security_check") }}" method="post">
                <h2>Saloute !</h2>
                {% if csrf_token %}
                    <input class="form-control" type="hidden" name="_csrf_token"
                           value="{{ csrf_token }}"/>
                {% endif %}

                <label for="username">{{ 'security.login.username'|trans }}</label>
                <input class="form-control" placeholder="MyPseudo" type="text"
                       id="username" name="_username"
                       value="{{ last_username }}"
                       required="required"/>

                <label for="password">{{ 'security.login.password'|trans }}</label>
                <input class="form-control" placeholder="Password"
                       type="password"
                       id="password" name="_password" required="required"/>

                <div class="checkbox">

                    <label for="remember_me"><input type="checkbox"
                                                    id="remember_me"
                                                    name="_remember_me"
                                                    value="on"/> {{ 'security.login.remember_me'|trans }}
                    </label>
                </div>

                <input class="form-control btn btn-primary-lgv" type="submit"
                       id="_submit" name="_submit"
                       value="{{ 'security.login.submit'|trans }}"/>
            </form>
        </div>
    </div>
</div>
